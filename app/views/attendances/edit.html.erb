<%= render "shared/error_messages", resource: @attendance %>
<div class="wrapper right-side-wrapper">
  <div class="col-md-6 col-md-offset-3">
    <h2>勤怠</h2>
    <%= form_with(model: @attendance, local: true) do |f| %>

      <div class="field form-group">
        <%= f.label :started_at, class: "form-group" %>
        <%= f.datetime_field :started_at, class: "form-control" %>
      </div>

      <div class="field form-group">
        <%= f.label :finished_at, class: "form-group" %>
        <%= f.datetime_field :finished_at, class: "form-control" %>
      </div>

      <div class="actions">
        <%= f.submit "変更する", class: "form-control light" %>
      </div>
    <% end %>
    <%= link_to "削除する", attendance_path(@attendance), method: :delete, data: { confirm: '削除してよろしいですか' } %>
  </div>
</div>