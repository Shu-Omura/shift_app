<div class="wrapper">
  <div class="col-md-7 col-md-offset-1 all-staffs-table">
    <h2>確定版</h2>
    <%= month_calendar events: @created_shifts do |date, shifts| %>
      <%= date %>
      <% shifts.each do |shift| %>
        <%= link_to collected_shift_created_shift_path(shift.collected_shift, shift), method: :delete, data: { confirm: "未確定に変更してよろしいですか？" } do %>
          <%= shift.user.name %>: 
          <%= l shift.started_at %> -
          <%= l shift.finished_at %>
        <% end %>
      <% end %>
    <% end %>
  </div>
</div>