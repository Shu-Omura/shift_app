<%= render "shared/error_messages", resource: resource %>
<div class="wrapper right-side-wrapper">
  <%= render "sidebar", user: @user, option_link: nil, option_link_name: "プロフィールを編集する" %>
  <div class="col-md-6 col-md-offset-1">
    <%= link_to "管理者の方はこちら", new_company_path, class: "alert alert-success top-msg" %>
    <h2>所属会社を登録</h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>

      <div class="field form-group">
        <h4><%= f.label :company, '会社名' %></h4>
        <%= f.text_field :company, autocomplete: "company", class: "form-control" %>
      </div>
  
      <div class="field form-group">
        <h4><%= f.label :company_auth_token, '認証キー' %></h4>
        <%= f.password_field :company_auth_token, autocomplete: "company_auth_token", class: "form-control" %>
      </div>

      <div><%= hidden_field_tag :path, 'edit_company' %></div>
    
      <div class="actions">
        <%= f.submit '申請する', class:"btn btn-default" %>
      </div>
    <% end %>
  </div>
</div>
