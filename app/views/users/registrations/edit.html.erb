<%= render 'shared/error_messages', resource: resource %>

<div class="wrapper right-side-wrapper">
  <div class="row">
    <div class="col-md-2 sidebar">
      <span class="gravatar"><%= gravatar_for @user %></span>
      <li><%= link_to @user.name, @user %></li>
      <li><%= link_to 'パスワードを変更する', edit_user_registration_path(path: 'edit_password') %></li>
      <% unless current_user.company %>
        <li><%= link_to '所属を登録する', edit_user_registration_path(path: 'edit_company') %></li>
      <% end %>
      <li><%= link_to '画像を変更する', 'https://ja.gravatar.com/' %></li>
      <li><%= link_to 'アカウントを削除する', registration_path(resource_name), data: { confirm: "アカウントを削除してよろしいですか？" }, method: :delete %></li>
      <li><%= link_to 'マイページへ戻る', user_path(current_user) %></li>
    </div>

    <div class="col-md-5 col-md-offset-1">
      <h2>プロフィールを編集</h2>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        
        <div class="field form-group">
          <h4><%= f.label :current_password, '現在のパスワードを確認' %></h4>
          <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control" %>
        </div>

        <div class="field form-group">
          <h4><%= f.label :name, 'ユーザー名' %></h4>
          <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control" %>
        </div>

        <div class="field form-group">
          <h4><%= f.label :email, 'メールアドレス' %></h4>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", readonly: true %>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div><%= resource.unconfirmed_email %>でアカウントを有効化してください。</div>
        <% end %>

        <div class="actions">
          <%= f.submit '変更を保存', class:"btn btn-default" %>
        </div>
      <% end %>
    </div>
  <div class="col-md-1"></div>
  <%= render 'shared/sidebar' %>
</div>
