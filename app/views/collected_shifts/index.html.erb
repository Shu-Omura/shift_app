<h2>全社員シフト</h2>
<%= month_calendar events: @collected_shifts do |date, shifts| %>
  <%= date %>
  <% shifts.each do |shift| %>
    <div>
      <%= link_to user_path(shift.user) do %>
        <%= shift.user.name %>: 
        <%= shift.started_at.strftime("%-H:%-M") %>〜
        <%= shift.finished_at.strftime("%-H:%-M") %>
      <% end %>
    </div>
  <% end %>
<% end %>

<table>
  <caption>スタッフ別</caption>
  <tr>
    <th>スタッフ名</th>
    <th>出勤予定日数</th>
  </tr>
  <% @users.each do |user| %>
    <tr>
      <td><%= user.name %></td>
      <td><%= user.collected_shifts.count %></td>
    </tr>
  <% end %>
</table>